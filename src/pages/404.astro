---
import Layout from '../components/shared/Layout.astro';

const metaTags = {
  title: 'Majáles UTB - Tudy cesta nevede',
  description: 'Stránka, kterou hledáte, neexistuje. Zkuste se vrátit na hlavní stránku.',
  image: '/meta_image-404.jpg',
};
---

<Layout {...metaTags}>
  <section class="md:pt-16 pb-16 lg:pb-32 bg-lightPink md:text-center">
    <div class="py-16 min-h-[70vh] flex justify-center items-center">
      <div class="text-center text-violet">
        <div class="flex-shrink-0 flex justify-center"></div>
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl pt-8 sm:pt-10 lg:pt-12 font-medium tracking-wider leading-snug sm:leading-snug md:leading-snug lg:leading-snug"
        >
          Stránka nenalezena
        </h1>
        <p class="mt-2 text-base">Omlouváme se, ale vámi hledaná stránka nebyla nalezena.</p>
        <a href="/" class="block mt-6 font-semibold text-lg transition duration-300"
          >Zpět na domovskou stránku<span aria-hidden="true"> &rarr;</span></a
        >
      </div>
    </div>
  </section>
</Layout>
