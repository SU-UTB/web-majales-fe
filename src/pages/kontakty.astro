---
import { ContactLandingSection } from '../components/contacts/ContactLandingSection';
import Layout from '../components/shared/Layout.astro';
import { SectionHero } from '../components/shared/SectionHero';
import { UpperFooter } from '../components/shared/UpperFooter';

const metaTags = {
  title: 'Kontakty | Majáles UTB',
  description: 'Kontakty na manažery jednotlivých sekcí',
  image: '/meta_image.jpg',
};

// Konfigurace barev pro Hero sekci - sjednoceno napříč celým webem
const heroColors = {
  // --- LEFT SIDE ---
  dateRectColor: 'fill-violet',
  BottomLeftTriangleUpper: 'fill-lightOrange',
  BottomLeftTriangleLower: 'fill-orange',
  BottomLeftSquareStarMain: 'fill-orange',
  BottomLeftSquareStarSec: 'fill-lightOrange',
  BottomLeftSquareCircleMainLeft: 'fill-violet',
  BottomLeftSquareCircleMainRight: 'fill-violet',
  BottomLeftSquareCircleSecLeft: 'fill-lightOrange',
  BottomLeftSquareCircleSecRight: 'fill-orange',

  // --- RIGHT SIDE & BOTTOM ---
  BottomRightTriangleLeft: 'fill-lightOrange',
  timeRectColor: 'fill-violet',
  BottomRightLightning: 'fill-violet',
  BottomRightSquareCircleMainLeft: 'fill-violet',
  BottomRightSquareCircleMainRight: 'fill-orange',
  BottomRightSquareCircleSecLeft: 'fill-lightOrange',
  BottomRightSquareCircleSecRight: 'fill-lightOrange',
  BottomRightTriangleRight: 'fill-orange',

  // --- TOP ---
  TopRightTriangleUpper: 'fill-orange',
  TopRightSquareStar45Main: 'fill-violet',
  TopRightSquareStar45Sec: 'fill-lightOrange',
  TopRightLeftArrowMain: 'fill-orange',
  TopRightLeftArrowSec: 'fill-lightOrange',
};
---

<Layout {...metaTags}>
  {/* Předání sjednocených barev pomocí spread operátoru */}
  <SectionHero {...heroColors} />

  <ContactLandingSection client:visible />

  {/* Sjednocení barvy footeru na "orange" */}
  <UpperFooter bgColor="bg-orange" />
</Layout>
